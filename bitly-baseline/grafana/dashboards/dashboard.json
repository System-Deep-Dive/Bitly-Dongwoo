{
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "8.5.2"
    },
    {
      "type": "panel",
      "id": "graph",
      "name": "Graph",
      "version": ""
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "gnetId": null,
  "graphTooltip": 0,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "HTTP Requests (RPS)",
      "type": "graph",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-bitly-baseline"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{job='spring-app'}[1m]))",
          "legendFormat": "Total RPS"
        }
      ]
    },
    {
      "title": "HTTP Request Latency (p95)",
      "type": "graph",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-bitly-baseline"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job='spring-app'}[1m])) by (le))",
          "legendFormat": "p95 Latency"
        }
      ]
    },
    {
      "title": "JVM Heap Memory Usage",
      "type": "graph",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-bitly-baseline"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{area='heap', job='spring-app'}) by (id)",
          "legendFormat": "{{id}}"
        }
      ]
    },
    {
      "title": "System CPU Usage",
      "type": "graph",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-bitly-baseline"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "targets": [
        {
          "expr": "rate(process_cpu_usage{job='spring-app'}[1m]) * 100",
          "legendFormat": "CPU Usage %"
        }
      ]
    },
    {
      "title": "HikariCP Active Connections",
      "type": "graph",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-bitly-baseline"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(hikaricp_connections_active{job='spring-app'})",
          "legendFormat": "Active Connections"
        }
      ]
    },
    {
      "title": "HikariCP Pending Connections",
      "type": "graph",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus-bitly-baseline"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "targets": [
        {
          "expr": "sum(hikaricp_connections_pending{job='spring-app'})",
          "legendFormat": "Pending Connections"
        }
      ]
    }
  ],
  "schemaVersion": 36,
  "style": "dark",
  "tags": [],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "timepicker": {},
  "timezone": "",
  "title": "Bitly Baseline Dashboard",
  "uid": "bitly-baseline-dashboard",
  "version": 2
}
